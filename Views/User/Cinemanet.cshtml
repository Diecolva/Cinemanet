@model IEnumerable<Cinemanet.Models.Domain.Pelicula>

@{
    ViewData["Title"] = "Index";
    Layout = null;
    string username = User.Identity.Name;
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<!doctype html>
<html lang="en">

<head>
    <title>Cinemanet</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

</head>

<body style="background-color: #0066ff;">
    <div class="container">
        <h1 style="color: white;">Cinemanet</h1>
    </div>
    <div class="container mt-5">
        <div class="row flex-row">
            @foreach (var pelicula in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card" style="width: 18rem;">
                        <img src="@Url.Content(pelicula.Caratula)" class="card-img-top" alt="Carátula de la película">
                        <div class="card-body">
                            <h5 class="card-title">@pelicula.Nombre</h5>
                            <a href="@Url.Action("Details", new { id = pelicula.Id })" class="btn btn-outline-primary">Ver detalles</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="position-fixed top-0 end-0 mt-3 me-3">
                <form id="logoutForm" asp-controller="UserAuthentication" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Cerrar sesión</button>
                </form>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
</body>

</html>


