@model Cinemanet.Models.Domain.Pelicula

@{
    ViewData["Title"] = "Añadir Película";
}

<h1>Añadir Película</h1>

@using (Html.BeginForm("Create", "Pelicula", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required>
    </div>

    <div class="form-group">
        <label for="sinopsis">Sinopsis:</label>
        <textarea class="form-control" id="sinopsis" name="sinopsis" required></textarea>
    </div>

    <div class="form-group">
        <label for="caratula">Carátula:</label>
        <input type="file" class="form-control" id="caratula" name="caratula" required>
    </div>

    <div class="form-group">
        <label>Géneros:</label>
        <br />
        @foreach (var genero in ViewBag.Generos)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="generos" value="@genero.Id" id="genero_@genero.Id">
                <label class="form-check-label" for="genero_@genero.Id">@genero.Nombre</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
}