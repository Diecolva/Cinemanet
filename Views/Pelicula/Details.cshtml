@model Cinemanet.Models.Domain.Pelicula

@{
    ViewData["Title"] = "Detalles de Película";
}

<h1>Detalles de Película</h1>

<div>
    <h4>Película</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Sinopsis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sinopsis)
        </dd>
        <dt class="col-sm-2">
            Carátula
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Caratula))
            {
                <img src="@Url.Content(Model.Caratula)" alt="Carátula" class="img-fluid" style="width: 100px; height: auto;"/>
            }
            else
            {
                <span>No hay carátula disponible</span>
            }
        </dd>
        <dt class="col-sm-2">
            Géneros
        </dt>
        <dd class="col-sm-10">
            @foreach (var genero in Model.Generos)
            {
                <span>@genero.Nombre</span>
                <br />
            }
        </dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>